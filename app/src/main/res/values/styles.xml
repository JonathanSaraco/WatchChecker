<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- In progress here -->
    <!-- Light application theme -->
    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="android:backgroundStacked">@color/lightBackground</item>
        <item name="android:textColorPrimary">@color/lightPrimaryText</item>
        <item name="android:textColorSecondary">@color/lightSecondaryText</item>
        <item name="android:colorPrimary">@color/lightPrimaryAccent</item>
        <item name="drawerArrowStyle">@style/LightDrawerIcon</item>
    </style>

    <style name="LightAppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary">@color/lightPrimaryAccent</item>
        <item name="colorPrimary">@color/lightBackground</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/LightDrawerIcon</item>
    </style>

    <style name="LightAppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/lightPrimaryText</item>
    </style>

    <style name="LightDrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Dark application theme -->
    <style name="DarkAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:textColorPrimary">@color/darkPrimaryText</item>
        <item name="android:textColorSecondary">@color/darkSecondaryText</item>
        <item name="android:colorPrimary">@color/darkPrimaryAccent</item>
        <item name="drawerArrowStyle">@style/LightDrawerIcon</item>
    </style>

    <style name="DarkAppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/darkPrimaryAccent</item>
        <item name="colorPrimary">@color/darkBackground</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/LightDrawerIcon</item>
    </style>

    <style name="DarkAppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/darkPrimaryText</item>
        <item name="colorPrimary">@color/darkPrimaryText</item>
    </style>

    <!-- Dark application theme -->
    <style name="AmoledAppTheme" parent="DarkAppTheme">
        <item name="android:colorBackground">@color/amoledBackground</item>
    </style>

    <style name="AmoledAppTheme.NoActionBar" parent="DarkAppTheme.NoActionBar">
        <item name="android:colorBackground">@color/amoledBackground</item>
    </style>

    <style name="AmoledAppTheme.Dialog" parent="DarkAppTheme.Dialog">
        <item name="android:colorBackground">@color/amoledBackground</item>
    </style>

</resources>
