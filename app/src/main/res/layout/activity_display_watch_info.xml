<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.watchchecker.view.SquareWidthImageView
                    android:id="@+id/display_watch_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    android:paddingBottom="4dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <android.support.constraint.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />

                    <android.support.design.card.MaterialCardView
                        android:id="@+id/display_watch_info_card_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/display_watch_timekeeping_info_card_view"
                        app:layout_constraintTop_toTopOf="@id/guideline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/display_watch_identifier_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Watch model"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/display_watch_movement_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="Movement: " />

                            <TextView
                                android:id="@+id/display_watch_purchase_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="Purchase Date: " />

                            <TextView
                                android:id="@+id/display_watch_service_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="Last Service: " />
                        </LinearLayout>

                    </android.support.design.card.MaterialCardView>

                    <android.support.design.card.MaterialCardView
                        android:id="@+id/display_watch_timekeeping_info_card_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline"
                        app:layout_constraintLeft_toRightOf="@+id/display_watch_info_card_view"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/guideline">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/display_watch_deviation_header_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="Timekeeping"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/display_watch_average_deviation_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:text="Average: +8 s/day" />

                        </LinearLayout>
                    </android.support.design.card.MaterialCardView>
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timekeeping Entries"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginStart="16dp"
                    android:textSize="24sp"/>

                <GridView
                    android:id="@+id/display_watch_timekeeping_entry_grid_view"
                    android:layout_width="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">
                </GridView>

            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.constraint.ConstraintLayout>
</ScrollView>