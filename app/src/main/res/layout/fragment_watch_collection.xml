<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".fragment.WatchCollectionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        />

    <GridView
        android:id="@+id/gridView_check_watch"
        android:paddingTop="@dimen/watch_collection_grid_view_padding_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/watch_collection_grid_view_layout_margin"
        android:verticalSpacing="16dp"
        android:gravity="center"
        android:columnWidth="180dp"
        android:minHeight="180dp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
         />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/btn_plus" />
    
</FrameLayout>